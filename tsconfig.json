{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "filesGlob": [
    "./src/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "exclude": ["./index.ts"]
}
